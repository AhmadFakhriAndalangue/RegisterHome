<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="fakhriimron.com.login.MainActivity_Login">

    <TextView
        android:id="@+id/tv_want_To_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Wan't to Connect"
        android:textColor="#fff"
        android:textSize="28sp" />

    <View
        android:id="@+id/v_garis1"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_below="@id/tv_want_To_C"
        android:layout_centerHorizontal="true"
        android:background="#fff" />

    <EditText
        android:id="@+id/ET_first_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="first name"
        android:textColor="#000" />

    <EditText
        android:id="@+id/ET_last_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/ET_first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="last name"
        android:textColor="#000" />


    <EditText
        android:id="@+id/et_username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="Username" />

    <EditText
        android:id="@+id/b_Pass"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/tv_pass"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@id/b_Pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="login"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/tv_we_can_fix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pass"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="110dp"
        android:text="Don't have an account ? We can fix that"
        android:textColor="#fff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/b_singup"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_below="@id/tv_pass"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="105dp"
        android:layout_toRightOf="@id/tv_we_can_fix"
        android:background="@color/colorPrimary"
        android:text="Singup"
        android:textColor="#fff"
        android:textSize="10sp" />

</RelativeLayout>